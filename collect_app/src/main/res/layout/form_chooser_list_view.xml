<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#C7C7C7">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="1dp"
        android:background="#EDEDED">

        <FrameLayout
            android:id="@id/form_icon_imageview"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="5dp"
            android:background="@drawable/circle_shape"
            android:backgroundTint="@color/basis_color"

            >

            <ImageView
                android:id="@+id/form_icon_imageview"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_gravity="center"
                android:scaleType="fitXY"

                android:tint="@color/white"
                app:srcCompat="@drawable/ic_baseline_insert_drive_file_24" />
        </FrameLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@id/form_icon_imageview"

            android:orientation="vertical">

            <TextView
                android:id="@+id/form_description_textview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Form name"
                android:textColor="@color/black"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/version_textview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textColor="@color/grey"
                android:visibility="gone"
                android:textSize="13sp" />

            <TextView
                android:id="@+id/date_textview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Added on Tue, Aug 13,2019 at 18:24"
                android:textColor="@color/grey"
                android:textSize="13sp" />


        </LinearLayout>
    </RelativeLayout>

</RelativeLayout>